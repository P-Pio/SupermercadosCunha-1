{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "/backend/index.js"
    },
    {
      "handle": "filesystem"
    }, 
    {
      "src": "/(.*)",
      "dest": "frontend/$1",
      "check": true
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}
